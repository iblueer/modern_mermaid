{
  "name": "modern-mermaid-desktop",
  "productName": "Modern Mermaid",
  "private": true,
  "description": "A modern, beautiful Mermaid.js diagram editor",
  "author": "Maemo Lee",
  "version": "1.0.0",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:dev": "ELECTRON=true vite",
    "electron:build": "ELECTRON=true vite build && electron-builder",
    "electron:preview": "ELECTRON=true vite build && electron ."
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.17",
    "chokidar": "^5.0.0",
    "clsx": "^2.1.1",
    "electron-store": "^11.0.2",
    "html-to-image": "^1.11.13",
    "lucide-react": "^0.554.0",
    "lz-string": "^1.5.0",
    "mermaid": "^11.12.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.22",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vite-plugin-pwa": "^1.2.0"
  },
  "build": {
    "appId": "com.mermaid.desktop",
    "productName": "Modern Mermaid",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "mac": {
      "identity": null,
      "executableName": "ModernMermaid",
      "category": "public.app-category.developer-tools",
      "icon": "public/icon-512.png",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "dmg": {
      "title": "Modern Mermaid",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  }
}